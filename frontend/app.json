{
  "expo": {
    "name": " ",
    "slug": "frontend",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "icon": {
        "light": "./assets/ios/ios-light.png",
        "dark": "./assets/ios/ios-dark.png"
      },
      "infoPlist": {
        "NSCameraUsageDescription": "La aplicación necesita acceso a la cámara para tomar fotos de perfil y productos.",
        "NSPhotoLibraryUsageDescription": "La aplicación necesita acceso a tu galería para seleccionar fotos de perfil y productos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#365a7d",
          "image": "./assets/splash-icon.png",
          "dark": {
            "image": "./assets/splash-icon-dark.png",
            "backgroundColor": "#000000"
          },
          "imageWidth": 200
        }
      ],
      "expo-font",
      [
        "expo-image-picker",
        {
          "photosPermission": "La aplicación necesita acceso a tus fotos para seleccionar imágenes de productos y perfil.",
          "cameraPermission": "La aplicación necesita acceso a tu cámara para tomar fotos de productos y perfil."
        }
      ]
    ]
  }
}